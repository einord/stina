{
    "name": "@stina/electron",
    "version": "0.28.1",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/einord/stina.git"
    },
    "main": "dist/main.js",
    "scripts": {
        "postinstall": "node scripts/postinstall.js",
        "rebuild": "electron-rebuild -f -w better-sqlite3",
        "dev": "concurrently -k \"pnpm dev:core\" \"pnpm dev:build\" \"pnpm dev:renderer\" \"pnpm dev:run\"",
        "dev:renderer": "vite",
        "dev:build": "NODE_ENV=development tsup --watch",
        "dev:core": "pnpm --filter @stina/core dev",
        "dev:run": "nodemon --delay 300ms --signal SIGTERM --watch dist/main.js --watch dist/preload.js --exec \"sh -c 'while [ ! -f dist/main.js ] || [ ! -f dist/preload.js ]; do sleep 0.2; done; NODE_ENV=development RENDERER_PORT=3003 electron .'\"",
        "dev:electron": "NODE_ENV=development RENDERER_PORT=3003 electron .",
        "build": "pnpm build:main && pnpm build:renderer && electron-builder",
        "build:main": "tsup",
        "build:renderer": "vite build",
        "typecheck": "vue-tsc --noEmit",
        "generate:icon": "node scripts/generate-icon.js"
    },
    "dependencies": {
        "@hexagon/base64": "^1.1.27",
        "@levischuck/tiny-cbor": "^0.2.2",
        "@microsoft/fetch-event-source": "^2.0.1",
        "@peculiar/asn1-android": "^2.3.10",
        "@peculiar/asn1-ecc": "^2.3.8",
        "@peculiar/asn1-rsa": "^2.3.8",
        "@peculiar/asn1-schema": "^2.3.8",
        "@peculiar/asn1-x509": "^2.3.8",
        "@stina/adapters-node": "workspace:*",
        "@stina/api-client": "workspace:*",
        "@stina/auth": "workspace:*",
        "@stina/builtin-tools": "workspace:*",
        "@stina/chat": "workspace:*",
        "@stina/core": "workspace:*",
        "@stina/extension-api": "workspace:*",
        "@stina/i18n": "workspace:*",
        "@stina/scheduler": "workspace:*",
        "@stina/shared": "workspace:*",
        "@stina/ui-vue": "workspace:*",
        "asn1js": "^3.0.5",
        "better-sqlite3": "^12.6.2",
        "bindings": "^1.5.0",
        "cross-fetch": "^4.0.0",
        "electron-updater": "^6.1.0",
        "file-uri-to-path": "^1.0.0",
        "luxon": "^3.2.1",
        "node-fetch": "^2.7.0",
        "pvtsutils": "^1.3.5",
        "pvutils": "^1.1.3",
        "tr46": "~0.0.3",
        "tslib": "^2.6.0",
        "webidl-conversions": "^3.0.0",
        "whatwg-url": "^5.0.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.2",
        "@types/node": "^20.10.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "concurrently": "^8.2.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "nodemon": "^3.1.11",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vue": "^3.4.0",
        "vue-tsc": "^2.0.0"
    },
    "build": {
        "appId": "com.stina.app",
        "npmRebuild": false,
        "generateUpdatesFilesForAllChannels": true,
        "productName": "Stina",
        "directories": {
            "output": "out"
        },
        "files": [
            "dist/**/*",
            "resources/**/*"
        ],
        "asarUnpack": [
            "**/better-sqlite3/**",
            "**/*.node"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "resources/icons/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.inherit.plist",
            "notarize": false
        },
        "afterSign": "scripts/notarize.js",
        "win": {
            "target": "nsis",
            "icon": "resources/icons/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "resources/icons"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "einord",
                "repo": "stina"
            }
        ]
    }
}

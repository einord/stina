{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@stina/shared": ["packages/shared/src/index.ts"],
      "@stina/shared/*": ["packages/shared/src/*"],
      "@stina/core": ["packages/core/src/index.ts"],
      "@stina/core/*": ["packages/core/src/*"],
      "@stina/adapters-node": ["packages/adapters-node/src/index.ts"],
      "@stina/adapters-node/*": ["packages/adapters-node/src/*"],
      "@stina/ui-vue": ["packages/ui-vue/src/index.ts"],
      "@stina/ui-vue/*": ["packages/ui-vue/src/*"]
    }
  }
}

{
  "name": "stina",
  "version": "0.5.0",
  "private": true,
  "description": "AI assistant for your workday",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:api": "pnpm build:packages && pnpm --filter @stina/api dev",
    "dev:web": "pnpm build:packages && concurrently -k -n api,web -c blue,green \"pnpm --filter @stina/api dev\" \"pnpm --filter @stina/web dev\"",
    "dev:electron": "pnpm build:packages && pnpm --filter @stina/electron rebuild electron && pnpm --filter @stina/electron dev",
    "dev:tui": "pnpm build:packages && pnpm --filter @stina/tui dev",
    "build:packages": "pnpm --filter './packages/*' build",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0",
    "vitest": "^2.0.0"
  }
}

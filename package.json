{
  "name": "pro-assist-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Pro Assist â€“ Desktop (Tauri + Vue) and CLI (oclif) apps sharing a core domain layer.",
  "scripts": {
    "build": "turbo run build",
    "predev": "npm run db:sync",
    "dev": "turbo run dev --parallel",
    "dev:ui": "npm -w @pro-assist/desktop run dev",
    "dev:cli": "npm -w @pro-assist/cli run dev",
    "start": "npm run dev:ui",
    "db:sync": "npm -w core exec drizzle-kit push",
    "cli": "node apps/cli/dist/index.cjs --help",
    "cli:build": "npm -w @pro-assist/cli run build && node apps/cli/dist/index.cjs --help",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,vue,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,vue,md}\"",
    "tauri": "npm -w @pro-assist/desktop run tauri",
    "tauri:build": "npm -w @pro-assist/desktop run tauri:build",
    "setup": "npm i && npm run db:sync && npm run build",
    "seed": "ts-node --project tsconfig.json --esm scripts/seed.ts"
  },
  "workspaces": [
    "core",
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.30",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20 <24"
  }
}
